<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--button-->
    <style name="appButtonDefault" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_button_height</item>
        <item name="android:textSize">@dimen/app_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="appButtonThemeBlue" parent="appButtonDefault">
        <item name="android:background">@drawable/button_theme_blue</item>
    </style>

    <style name="appButtonThemeOrange" parent="appButtonDefault">
        <item name="android:background">@drawable/button_theme_orange</item>
    </style>

    <!--textview-->
    <style name="appTextDefault">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="appTextHead" parent="appTextDefault">
        <item name="android:textSize">@dimen/app_font_head</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="appTextContentNormal" parent="appTextDefault">
        <item name="android:textSize">@dimen/app_font_content</item>
    </style>

    <style name="appTextContent" parent="appTextDefault">
        <item name="android:textSize">@dimen/app_font_content</item>
    </style>

</resources>